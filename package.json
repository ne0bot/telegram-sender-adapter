{
  "name": "telegram-sender-adapter",
  "display_name": "Telegram",
  "version": "0.0.7",
  "description": "Simple telegram sending actions. Needs to be configured with chatid and token.",
  "main": "index.js",
  "scripts": {
    "lint": "eslint ."
  },
  "homepage": "https://github.com/ne0bot/telegram-sender-adapter",
  "author": "ne0bot",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/ne0bot/telegram-sender-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/ne0bot/telegram-sender-adapter"
  },
  "files": [
    "LICENSE",
    "README.md",
    "SHA256SUMS",
    "index.js",
    "manifest.json",
    "node_modules",
    "telegram-sender-adapter.js",
    "telegram-notifier.js"
  ],
  "moziot": {
    "api": {
      "min": 2,
      "max": 2
    },
    "type": "notifier",
    "plugin": true,
    "exec": "{nodeLoader} {path}",
    "config": {
      "token": "",
      "chatid": ""
    },
    "schema": {
      "type": "object",
      "required": [
        "token",
        "chatid"
      ],
      "properties": {
        "token": {
          "type": "string"
        },
        "chatid": {
          "type": "string"
        }
      }
    }
  },
  "dependencies": {
    "node-telegram-bot-api": "^0.40.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "lint": "^0.7.0"
  }
}
